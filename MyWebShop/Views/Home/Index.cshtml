@model List<AllCartridgesViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstCartridge = Model.Any() ? Model[0] : null;
    var secondCartridge = Model.Count > 1 ? Model[1] : null;
    var thirdCartridge = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best Web Shop for printer cartridges!</h1>
        <p class="lead">There are no cartridges in the system  currently available</p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCartridge != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-25" src="@firstCartridge.ImageUrl" alt="@firstCartridge.Printer @firstCartridge.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cartridges" asp-action="Details" asp-route-id="@firstCartridge.Id">@firstCartridge.Price  @firstCartridge.Printer @firstCartridge.Model</a></h5>
                </div>
            </div>
        }

        @if (secondCartridge != null)
        {
            <div class="carousel-item">
                <img class="d-block w-25" src="@secondCartridge.ImageUrl" alt="@secondCartridge.Printer @secondCartridge.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary"  asp-controller="Cartridges" asp-action="Details" asp-route-id="@secondCartridge.Id">@secondCartridge.Price  @secondCartridge.Printer @secondCartridge.Model</a></h5>
                </div>
            </div>
        }

        @if (thirdCartridge != null)
        {
            <div class="carousel-item">
                <img class="d-block w-25" src="@thirdCartridge.ImageUrl" alt="@thirdCartridge.Printer @thirdCartridge.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cartridges" asp-action="Details" asp-route-id="@thirdCartridge.Id">@thirdCartridge.Price  @thirdCartridge.Printer @thirdCartridge.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/brother.png" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/canon.jpg" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/epson.jpg" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/hp.png" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/lexmark.png" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/xerox.jpg" />
        </h2>
    </div>

</div>