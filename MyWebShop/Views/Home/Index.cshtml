@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}



@if (!Model.Cartridges.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best Web Shop for printer cartridges!</h1>
        <p class="lead">There are no cartridges in the system  currently available</p>
    </div>
}

<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Cartridges.Count; i++)
        {
            var cartridge = Model.Cartridges[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-25" src="@cartridge.ImageUrl" alt="@cartridge.PrinterBrand @cartridge.Model @cartridge.Price $">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cartridges" asp-action="Details" asp-route-id="@cartridge.Id">@cartridge.Price $ @cartridge.PrinterBrand @cartridge.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/brother.png"/>
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/canon.jpg" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/epson.jpg" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/hp.png" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/lexmark.png" />
        </h2>
        <h2 class="col-md-2">
            <img class="d-block w-100" src="~/images/xerox.jpg" />
        </h2>
    </div>

</div>